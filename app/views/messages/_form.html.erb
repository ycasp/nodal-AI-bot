<%= simple_form_for [chat_current, message],
  html: { id: "chatForm", class: "p-2 border-top bg-white" } do |f| %>

  <div class="position-relative">

    <%= f.input_field :content,
        class: "form-control rounded-pill shadow-sm pe-5",
        placeholder: "Type your message...",
        required: true %>

    <div class="position-absolute top-50 end-0 translate-middle-y d-flex align-items-center me-2">

      <label class="d-flex align-items-center justify-content-center rounded-circle bg-light shadow-sm"
             style="width:32px; height:32px; cursor:pointer;">
        <%= image_tag "clip.png",
            alt: "Attach",
            style: "width:18px; height:18px;" %>

        <%= f.input :file,
            as: :file,
            label: false,
            input_html: { style: "display:none;" } %>
      </label>

      <%= f.button :submit, "âž¤",
          class: "btn btn-primary rounded-circle ms-2",
          style: "width:32px; height:32px; padding:0;" %>

    </div>

  </div>

<% end %>
