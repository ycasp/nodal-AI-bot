<%= simple_form_for [chat_current, message],
  html: { id: "chatForm", class: "p-2 border-top bg-white" } do |f| %>

  <div class="position-relative">


    <%= f.input_field :content,
        class: "form-control rounded-pill shadow-sm pe-5",
        placeholder: "Type your message...",
        required: true,
        id: "userInput" %>

    <div class="position-absolute top-50 end-0 translate-middle-y d-flex align-items-center gap-2 me-2">


      <label class="btn btn-light rounded-circle p-2 shadow-sm mb-0" style="cursor:pointer;">
        <%= image_tag "clip.png",
            alt: "Attach",
            style: "width: 20px; height: 20px;" %>

        <%= f.input :file,
            as: :file,
            label: false,
            input_html: { style: "display:none;" } %>
      </label>

     
      <%= f.button :submit, "âž¤",
          class: "btn btn-primary rounded-circle p-2 shadow-sm" %>

    </div>

  </div>

<% end %>
