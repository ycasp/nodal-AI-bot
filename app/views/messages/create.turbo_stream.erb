<% if @chat_current.title_previously_changed? %>
  <%= turbo_stream.update "chat_title", @chat_current.title %>
<% end %>

<%= turbo_stream.append "messages" do %>
  <%= render "messages/messages", messages: @chat_current.messages.last(2) %>
<% end %>

<%= turbo_stream.update "new_message_container" do %>
  <%= render "messages/form", chat: @chat_current, message: Message.new %>
<% end %>
